rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
  
    // Make sure the uid of the requesting user matches name of the user
    // document. The wildcard expression {userId} makes the userId variable
    // available in rules.
    match /users/{userId} {
    	allow read;
      allow update, delete: if request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId;
    }
    
    match /trainer_schedules/{scheduleId} {
    	allow read;
    	allow create: if request.auth.uid == request.resource.data.poster;
      allow delete: if request.auth.uid == resource.data.poster;
      allow update: if request.auth.uid == resource.data.poster
      							|| (request.resource.data.keys().hasAll(['bookers.' + request.auth.uid]));
    }
  }
}